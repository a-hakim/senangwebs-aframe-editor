.modal
  animation animateopacity 0.2s ease-out
  display flex
  height 100%
  left 0
  overflow auto
  position fixed
  top 0
  width 100%
  z-index 9999999999
  backdrop-filter blur(4px)
  background-color rgba(0, 0, 0, .5)

.modal h3
  font-size 16px
  font-weight 500
  margin 0.6em 0

#textureModal .modal-content
  height calc(100% - 96px)
  max-width calc(100% - 96px)
  border-radius 8px

.modal-content
  animation animatetop 0.2s ease-out
  animation-duration 0.2s
  animation-name animatetop
  background-color #18181B
  margin auto
  overflow hidden
  padding 0

.close
  color #ffffff80
  float right
  font-size 24px
  font-weight bold

  &:hover
    cursor pointer
    color #ffffff

.closehover,
.closefocus
  color #08f
  cursor pointer
  text-decoration none

.modal-header
  color white
  padding 2px 16px

.modal-body
  overflow auto
  padding 16px
  height inherit

  &::-webkit-scrollbar
    width 8px
    height 8px

  &::-webkit-scrollbar-track
    background #18181B
    border-radius 4px

  &::-webkit-scrollbar-thumb
    background #3f3f46
    border-radius 4px
    transition background 0.2s ease

  &::-webkit-scrollbar-thumb:hover
    background #52525b

  &::-webkit-scrollbar-corner
    background #18181B

.modal-footer
  color white
  padding 2px 16px

/* Gallery */
.gallery
  display flex
  flex-wrap wrap
  overflow auto
  gap 12px
  padding 2px


.newimage .gallery
  padding 8px

/* Toolbar */
.texture-toolbar
  display flex
  align-items center
  gap 12px
  margin-bottom 8px

.url-input-group
  flex 1
  display flex
  gap 8px
  align-items center

.url-input-group .imageUrl
  flex 1
  height 32px
  padding 0 12px
  border-radius 8px
  border none
  background #232323
  color #00ff99
  font-size 13px

.url-input-group .imageUrl::placeholder
  color #666

.url-input-group .load-url-btn
  height 32px
  padding 0 16px
  white-space nowrap
  font-size 12px

.registry-section
  margin-bottom 12px

.section-label
  display block
  margin-bottom 8px
  color #888
  font-size 13px

.gallery-item
  border-radius 8px
  box-shadow 0 0 6px rgba(0, 0, 0, 0.6)
  cursor pointer
  overflow hidden
  width 155px
  transition box-shadow 0.15s ease

.gallery-item.selected,
.gallery-item:hover
  box-shadow 0 0 0 2px #00ff99

.gallery-item .detail
  background-color #323232
  margin 0
  min-height 60px
  padding 4px 8px 8px 8px

.preview
  padding 12px
  padding-right 0
  width 250px

.preview label
  color #888
  font-size 12px
  display block
  margin-bottom 4px

.preview input
  display block
  margin 0 0 12px 0
  height 24px
  width 230px
  border-radius 8px

.preview img
  border-radius 8px
  margin-bottom 4px

.preview button
  width 242px
  margin-top 8px

.preview button:hover
  background-color #00ff99
  color #000

.preview .detail
  margin-bottom 8px

.preview .detail .title
  color #fff
  display block
  max-width 230px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  font-size 13px

.preview .detail .dimensions
  color #888
  font-size 12px
  display block
  margin-top 4px

.gallery-item.selected .detail,
.gallery-item:hover .detail
  background-color #444

.gallery-item .detail span
  color #777
  display block
  margin-top 4px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  width 140px

.gallery-item.selected .detail span,
.gallery-item:hover .detail span
  color #888

.gallery-item .detail span.title
  color #fff !important

.gallery .loading-indicator
  background transparent
  box-shadow none
  color #888
  display flex
  align-items center
  justify-content center
  width 100%
  padding 40px 20px
  font-size 14px
  animation pulse 1.5s ease-in-out infinite

@keyframes pulse
  0%, 100%
    opacity 0.5
  50%
    opacity 1

.modal button
  appearance none
  border-radius 0
  box-shadow none
  cursor pointer
  display inline-block
  font-size 12px
  line-height 1.8
  margin 0 0 0 0
  padding 5px 10px

.modal buttonfocus
  outline none

.modal button
  background-color #09090b
  border none
  color #fff
  border-radius 8px
  font-weight 500
  padding 8px 16px
  text-transform capitalize
  transition all 0.2s ease-in-out

.modal button:hover
  background-color #00ff99
  color #000

.modal buttonhover,
.modal button.hover
  background-color #346392
  text-shadow -1px 1px #27496d

.modal buttonactive,
.modal button.active
  background-color #27496d
  text-shadow -1px 1px #193047

.modal buttondisabled
  background-color #888
  cursor none

.newimage
  color #A3A3A3
  display flex
  font-size 14px
  justify-content space-between
  overflow auto

.newimage input
  color #00ff99
  padding 3px 5px

.texture canvas + input
  margin-left 5px

.texture svg
  padding-right 5px

.uploader-normal-button .hidden
  display none

.assets.search
  position relative
  margin-top 10px
  width 100%

.assets.search svg
  position absolute
  right 10px
  top 8px

.assets.search input
  width calc(100% - 12px)
  height 20px
  padding 5px
  border-radius 8px

.new_asset_options
  margin 10px
  width 100%

.new_asset_options > ul
  margin-left 10px
  padding 5px

.new_asset_options > ul > li
  padding 10px 0

.new_asset_options .imageUrl
  margin-left 5px
  width 350px
  height 24px
  border-radius 8px

.texture canvas
  border 1px solid rgba(255, 255, 255, .15)
  border-radius 8px
  cursor pointer
