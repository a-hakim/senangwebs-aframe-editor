@import './lib';

#toolbar
  background-color $bgdark

  .toolbarActions
    padding 0
    height 48px
    display grid
    grid-template-columns repeat(2, minmax(0, 1fr))

    a.button
      display flex
      justify-content center
      align-items center
      flex-direction column
      margin 0

      svg
        color inherit

      span
        font-size 12px

    a.button:hover
      color $primary

    a.disabled
      color #666
      cursor default

#scenegraph
  background $bg
  border-top 1px solid #111
  display flex
  flex-direction column
  overflow auto
  width 20rem
  height 100vh

  .scenegraph-menubar
    display flex
    height 40px
    justify-content space-between

  .entity
    background $bg
    cursor pointer
    display flex
    justify-content space-between
    padding 10px
    white-space nowrap

    &:hover
      background #1d2f39

    &.active
      background-color #09090B
      color #fff
      .component:hover
        color #1888c1
      .entityActions
        display flex

    &.novisible
      &.active
        span,
        svg,
        .collapsespace,
        .id
          color #999

      &:not(.active)
        span,
        svg,
        .collapsespace,
        .id
          color #626262

  .component:hover
    color #1faaf2

  .entityIcons
    margin-left 2px

  .entityActions
    display none
    margin 0 4px

    .button
      color #fff
      font-size 12px
      margin-left 6px

  svg
    color #CCC

  .entityActions svg:hover
    color $primary

  .active svg
    color #FAFAFA

  .id
    color #ccc

  .option.active .id
    color #fff

  .collapsespace
    color #eee
    display inline-block
    text-align center
    width 14px
    margin-left 8px

  .fa-eye
    color #bbb

  .icons a.button
    color #fff

  .search
    padding 0px
    font-size 16px
    position relative
    overflow hidden

    input
      color $white
      background $bg
      border-radius 0px
      border-bottom 1px solid $bgdark
      height 40px
      text-indent 10px
      width 20rem

    svg
      position absolute
      right 12px
      top 12px

  .outliner
    background $bg
    color $white
    cursor default
    flex 1 1 auto
    font-size 14px
    line-height normal
    outline none
    overflow-y auto
    padding 0px
    width 20rem

.scenegraph-bottom
  background-color #323232
  border-top 1px solid #111
  bottom 10
  height 40px
  left 0
  z-index 100

  a
    float right
    margin 10px
